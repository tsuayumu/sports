div[id="Giants"]
	div.uk-container.uk-container-center
		h1.page-tit.white
			| 理想のスタメン
		div.form-content
			= form_for @lineup_form, url: :create_dream_lineup do |f|
				h2.white
					| 打順入力
				table[border="0"  width="100%" style="color: white"]
						tr[style="text-align: center"]
							td
								| 
							td
								| 打率
							td
								| 本塁打
							td
								|　打点
							td
								|　盗塁
						- 9.times do |n|	
							= f.fields_for "dream_lineups[#{n}]" do |m|
								tr[style="text-align: center"]
									td
										| #{n+1}番
									td
										| 0.
										= m.number_field :average, maxlength: 4, style: "width: 5em", value: 250
									td
										= m.number_field :homerun, maxlength: 3, style: "width: 5em", value: 16
									td
										= m.number_field :rbi, maxlength: 3, style: "width: 5em", value: 33
									td
										= m.number_field :steal, maxlength: 3, style: "width: 5em", value: 8
									/ td
									/ 	= m.number_field :rbi, maxlength: 2
								= m.hidden_field :order, value: n+1
				// | user: #{f.text_field :user_id}
				= f.submit '登録'
					p
						| ＊デフォルトは管理人予想

		h2.white
			| 投稿一覧#{@dream_lineups.count}件

		div.hidden-ss.uk-grid
			- @dream_lineups.each do |opening_lineup|
				div.bbs-contet.uk-width-1-3[id="#{opening_lineup.id * 10}"]
					section.member[style="text-align: center;"]
						div.back-brack
							table[border="0"  width="80%" style="color: white"]
								tr[style="text-align: center"]
									td
										|
									td
										| 打率
									td
										| 本塁打
									td
										| 打点
									td
										| 盗塁
									- opening_lineup.dream_lineup.each_with_index do |order, index|
										- player = DreamPlayer.find(order.dream_player_id)
										tr[style="text-align: right"]
											td
												| #{index + 1} 番
											td
												| .
												= (player.average * 1000).to_i
											td
												= player.homerun 
											td
												= player.rbi
											td
												= player.steal 

					/ section.uk-width-3-5.coment
